<templates>
  <t t-name="o-spreadsheet-DataValidationCheckbox" owl="1">
    <div
      class="o-dv-checkbox-container position-absolute d-flex align-items-center justify-content-center overflow-hidden"
      t-att-style="containerStyle">
      <input
        type="checkbox"
        class="o-dv-checkbox"
        t-att-class="{'pe-none': isDisabled}"
        t-on-change="onCheckboxChange"
        t-att-checked="checkBoxValue"
      />
    </div>
  </t>
</templates>
