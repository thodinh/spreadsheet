<templates>
  <t t-name="o-spreadsheet-DataValidationDateCriterion" owl="1">
    <select class="o-dv-date-value o-input mb-4" t-on-change="onDateValueChanged">
      <option
        t-foreach="dateValues"
        t-as="dateVal"
        t-key="dateVal.value"
        t-att-value="dateVal.value"
        t-esc="dateVal.title"
        t-att-selected="dateVal.value === dateValue"
      />
    </select>

    <DataValidationInput
      t-if="dateValue === 'exactDate'"
      initialValue="this.value"
      onValueChanged.bind="onValueChanged"
      criterionType="props.initialCriterion.type"
    />
  </t>
</templates>
